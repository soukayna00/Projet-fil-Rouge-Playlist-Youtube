<?php
   $dossier = opendir("images"); // Ouverture du dossier 'images'
   while($resultat = readdir($dossier)) // Tant que PHP parcoure le dossier.
  {
      if($resultat != "." && $resultat != "..") // Si le nom du fichier est différent de '.' et '..' qui représentent le dossier actuel (.) et le dossier parent (..)
     {
        echo "<img src='".$resultat."' alt='' /><br />"; // On affiche l'image
     }
  }
   closedir($dossier); // On ferme le dossier.
?>